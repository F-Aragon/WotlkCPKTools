<Window x:Class="WotlkCPKTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WotlkCPKTools"
        xmlns:viewModel="clr-namespace:WotlkCPKTools.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">



    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="Black" CornerRadius="10">
        <Grid>
            <Grid Margin="10,10,10,10" Background="#272537">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>

                    <RowDefinition/>

                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
   
                    <TextBlock Text="CPK WoW Tools"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            FontSize="22"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1">

                        <RadioButton Content= "Addons"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                                     Style="{StaticResource MenuButtonTheme}"
                                     IsChecked="True"
                                     Command="{Binding AddonsViewCommand}"/>


                        <RadioButton Content= "Backup"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding BackUpViewCommand}"/>

                        <RadioButton Content= "Extra"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding ExtrasViewCommand}"/>

                    </StackPanel>

                </Grid>
                <ContentControl Grid.Row="1"
                                Margin="10,10,10,5"
                                Content="{Binding CurrentView}"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        
                        <ColumnDefinition Width="auto"/>
                        
                        <ColumnDefinition/>
                        
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Row="2" Margin="10,0,0,5" MaxWidth="300" MinWidth="300">
                        <Grid.ColumnDefinitions>
                            
                            <ColumnDefinition Width="*" />
                            
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,5,0" />

                        <Button Grid.Column="1" Width="25" Margin="2,0,0,0" Content="*" />
                        <Button Grid.Column="2" Width="25" Margin="2,0,0,0" Content="+" />
                        <Button Grid.Column="3" Width="25" Margin="2,0,0,0" Content="-" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        

    </Border>
</Window>
