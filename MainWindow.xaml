<Window x:Class="WotlkCPKTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WotlkCPKTools"
        xmlns:viewModel="clr-namespace:WotlkCPKTools.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">



    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="Black" CornerRadius="10">
        <Grid>
            <Grid Margin="10,10,10,10" Background="#272537">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>

                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="WOTLK Tools"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="22"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1">

                        <RadioButton Content= "Addons"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                                     Style="{StaticResource MenuButtonTheme}"
                                     IsChecked="True"
                                     Command="{Binding AddonsViewCommand}"/>


                        <RadioButton Content= "Backup"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding BackUpViewCommand}"/>

                        <RadioButton Content= "Extra"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding ExtrasViewCommand}"/>

                    </StackPanel>

                </Grid>
                <ContentControl Grid.Row="1"
                                Margin="10"
                                Content="{Binding CurrentView}"/>

            </Grid>
        </Grid>

        

    </Border>
</Window>
