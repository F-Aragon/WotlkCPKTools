<UserControl x:Class="WotlkCPKTools.MVVM.View.BackUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WotlkCPKTools.MVVM.View"
             xmlns:conv="clr-namespace:WotlkCPKTools.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Style for all buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Style for all TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#50999999"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Backup creation section -->
        <Border Grid.Row="0" BorderBrush="#80000000" BorderThickness="1" 
                Padding="10" Margin="0,0,0,10"
                Background="#90000000">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Backup Title -->
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="New Backup Title:" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Margin="5,0,0,0" Height="30"
                             Text="{Binding BackupTitle, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- Backup Comments -->
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,5,0,0">
                    <TextBox x:Name="CommentsBox"
                             Text="{Binding BackupComments, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="30"
                             MaxHeight="80"
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Top"/>
                    <TextBlock Text="Enter comments, supports multiple lines"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Top"
                               Visibility="{Binding Text, ElementName=CommentsBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                </Grid>

                <!-- Buttons (top-right) -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                    <Button Content="Create Backup" ToolTip="Save WTF" Width="150" Height="32" Command="{Binding BackupWtfCommand}"/>
                    <Button Width="30" Height="30" ToolTip="Open BackUps Folder" Margin="6,0,0,0" Command="{Binding OpenBackupsFolder}" Background="Transparent" BorderThickness="0">
                        <ContentControl Content="{StaticResource IconFolder}" Width="25" Height="25"/>
                    </Button>
                </StackPanel>

                <!-- Progress / Info box -->
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,0,0"
                         Width="200"
                         Height="{Binding ActualHeight, ElementName=CommentsBox}"
                         VerticalAlignment="Top"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Text="{Binding BackupProgress}"/>
            </Grid>
        </Border>

        <!-- Backup Manager -->
        <Border Grid.Row="2" BorderBrush="#80000000" BorderThickness="1" Padding="10"
                Background="#90000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- List of backups -->
                <ListView x:Name="BackupsListView"
                          Grid.Column="1"
                          ItemsSource="{Binding Backups}"
                          SelectedItem="{Binding SelectedBackup, Mode=TwoWay}"
                          SizeChanged="BackupsListView_SizeChanged"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          Foreground="White"
                          Background="#20000000"
                          BorderBrush="#50999999"
                          BorderThickness="1"
                          GridViewColumnHeader.Click="GridViewColumnHeader_Click">

                    <!-- Style for column headers -->
                    <ListView.Resources>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="#60000000"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#80000000"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4"/>
                        </Style>
                    </ListView.Resources>

                    <!-- Style for items: hover and selection -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Style.Triggers>
                                <!-- Hover effect (very subtle) -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#803A3756"/>
                                </Trigger>

                                <!-- Selection effect (slightly stronger) -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#903A3756"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <!-- ListView columns -->
                    <ListView.View>
                        <GridView >
                            <GridViewColumn x:Name="DateColumn" Header="Date" Width="45">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Date, StringFormat={}{0:MM/dd}}" Foreground="White">
                                            <TextBlock.ToolTip>
                                                <TextBlock Text="{Binding Date, StringFormat={}{0:MM/dd/yyyy HH:mm:ss}}" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn x:Name="TitleColumn" Header="Title">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" Foreground="White" Margin="5,0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="MB" Width="40">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SizeMB, StringFormat={}{0:F1}}" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Fav" Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsFavorite}" Foreground="White"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Open" Width="45">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Width="30" Height="25"
                                                ToolTip="Open this Backup folder"
                                                Command="{Binding DataContext.OpenBackupFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding FolderPath}"
                                                Background="Transparent" BorderThickness="0">
                                            <ContentControl Content="{StaticResource IconFolder}" Width="25" Height="25"/>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Left Panel: Backup Details -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" Text="Title:" Foreground="White" FontSize="15" Margin="0,0,0,2"/>
                    <TextBox Grid.Row="1" Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,10" FontSize="13"/>

                    <!-- Comments -->
                    <TextBlock Grid.Row="2" Text="Comments:" Foreground="White" FontSize="15" Margin="0,0,0,2"/>
                    <TextBox Grid.Row="3" Text="{Binding EditComments, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"
                             FontSize="13"/>

                    <!-- Date -->
                    <TextBlock Grid.Row="4" Text="Date:" Foreground="White" Margin="0,0,0,5"/>
                    <Grid Grid.Row="5" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="105"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Date TextBox -->
                        <Grid>
                            <TextBox x:Name="DateTextBox"
                                     Text="{Binding EditDate, StringFormat=dd/MM/yyyy HH:mm, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Text="dd/MM/yyyy HH:mm"
                                       Foreground="Gray"
                                       Margin="5,0,0,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text, ElementName=DateTextBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                        </Grid>

                        <!-- 'Now' button -->
                        <Button Grid.Column="1" Content="Now" ToolTip="Select current Day and Hour" Width="40" Height="25" Margin="5,0,0,0"
                                Command="{Binding SetBackupDateToNowCommand}"/>

                        <!-- Progress bar -->
                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding RestoreProgress}" 
                                           Foreground="White" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>
                                <ProgressBar Height="10"
                                             Width="190"
                                             Minimum="0"
                                             Maximum="100"
                                             Margin="5,0,0,0"
                                             Value="{Binding RestoreProgressPercentage}"
                                             Visibility="{Binding IsRestoring, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Update Backup" Width="120" ToolTip="Update Backup info (Not the content)" Margin="0,0,5,0" Height="25" Command="{Binding UpdateBackupCommand}"/>
                        <Button Content="Delete Backup" Width="120" ToolTip="Remove selected Backup" Margin="0,0,5,0" Command="{Binding DeleteBackupCommand}"/>
                        <Button Content="Restore Backup" Width="120" ToolTip="Remove current WoW WTF folder and restore with selected backup" Command="{Binding RestoreBackupCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
