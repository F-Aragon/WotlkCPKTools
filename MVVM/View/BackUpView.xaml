<UserControl x:Class="WotlkCPKTools.MVVM.View.BackUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WotlkCPKTools.MVVM.View"
             xmlns:conv="clr-namespace:WotlkCPKTools.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <!-- Section 1: Backup creation -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Section 2: Backup manager (future) -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="New Backup Title:" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Margin="5,0,0,0" Height="30" Text="{Binding BackupTitle, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- Comments -->
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,5,0,0">
                    <TextBox x:Name="CommentsBox"
                             Text="{Binding BackupComments, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="30"
                             MaxHeight="80"
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Top"/>
                    <!-- Watermark -->
                    <TextBlock Text="Enter comments, supports multiple lines"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Top"
                               Visibility="{Binding Text, ElementName=CommentsBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                </Grid>

                <!-- Buttons (top-right) -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                    <Button Content="Create Backup" Width="150" Height="32" Command="{Binding BackupWtfCommand}"/>
                    <Button Content="📂" Width="30" Height="30" Margin="6,0,0,0" Command="{Binding OpenBackupsFolder}"/>
                </StackPanel>

                <!-- Progress / Info -->
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,0,0"
                         Width="200"
                         Height="{Binding ActualHeight, ElementName=CommentsBox}"
                         VerticalAlignment="Top"
                         Background="DarkGray"
                         Foreground="White"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Text="{Binding BackupProgress}"/>
            </Grid>
        </Border>

        <!-- Backup Manager -->
        <!-- Right Panel: ListView of backups -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListView x:Name="BackupsListView" Grid.Column="1" ItemsSource="{Binding Backups}" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Loaded="BackupsListView_Loaded"
                          SizeChanged="BackupsListView_SizeChanged">
                    <ListView.View>
                        <GridView>
                            <!-- Date column -->
                            <GridViewColumn x:Name="DateColumn" Header="Date" Width="45">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Date, StringFormat={}{0:MM/dd}}">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding Date, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}"/>
                                            </TextBlock.ToolTip>
                            <ToolTipService.InitialShowDelay>0</ToolTipService.InitialShowDelay>
                            <ToolTipService.BetweenShowDelay>0</ToolTipService.BetweenShowDelay>
                            <ToolTipService.ShowDuration>3000</ToolTipService.ShowDuration>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Title column -->
                            <GridViewColumn x:Name="TitleColumn" Header="Title">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="5,0"
                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding Comments}"/>
                                            </TextBlock.ToolTip>
                            <ToolTipService.InitialShowDelay>0</ToolTipService.InitialShowDelay>
                            <ToolTipService.BetweenShowDelay>0</ToolTipService.BetweenShowDelay>
                            <ToolTipService.ShowDuration>3000</ToolTipService.ShowDuration>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Favorite checkbox column -->
                            <GridViewColumn Header="Fav" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsFavorite, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Open folder button column -->
                            <GridViewColumn Header="Open" Width="40">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="📂" Command="{Binding DataContext.OpenBackupFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding FolderPath}" Width="30" Height="25"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Left Panel: Backup Details -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" Orientation="Vertical">
                    <TextBlock Text="Backup Details" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Title -->
                    <TextBlock Text="Title:" Foreground="White"/>
                    <TextBox Text="{Binding SelectedBackup.Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <!-- Comments -->
                    <TextBlock Text="Comments:" Foreground="White"/>
                    <TextBox Text="{Binding SelectedBackup.Comments, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     Height="80" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

                    <!-- Date -->
                    <TextBlock Text="Date:" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <DatePicker SelectedDate="{Binding SelectedBackup.Date, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        <Button Content="Now" Width="40" Height="25" Margin="5,0,0,0"
                                Command="{Binding SetBackupDateToNowCommand}"
                                CommandParameter="{Binding SelectedBackup}"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Update Backup" Width="120" Margin="0,0,5,0" 
                        Command="{Binding UpdateBackupCommand}" 
                        CommandParameter="{Binding SelectedBackup}"/>
                        <Button Content="Delete Backup" Width="120" Margin="0,0,5,0" 
                        Command="{Binding DeleteBackupCommand}" 
                        CommandParameter="{Binding SelectedBackup}"/>
                        <Button Content="Activate Backup" Width="120"
                        Command="{Binding ActivateBackupCommand}" 
                        CommandParameter="{Binding SelectedBackup}"/>
                    </StackPanel>
                </StackPanel>


            </Grid>
            

        </Border>
    </Grid>
</UserControl>
