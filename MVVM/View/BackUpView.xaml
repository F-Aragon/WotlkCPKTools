<UserControl x:Class="WotlkCPKTools.MVVM.View.BackUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WotlkCPKTools.MVVM.View"
             xmlns:conv="clr-namespace:WotlkCPKTools.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Backup creation section -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="New Backup Title:" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Margin="5,0,0,0" Height="30" Text="{Binding BackupTitle, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- Comments -->
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,5,0,0">
                    <TextBox x:Name="CommentsBox"
                             Text="{Binding BackupComments, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="30"
                             MaxHeight="80"
                             VerticalAlignment="Top" 
                             VerticalContentAlignment="Top"/>
                    <TextBlock Text="Enter comments, supports multiple lines"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Top"
                               Visibility="{Binding Text, ElementName=CommentsBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                </Grid>

                <!-- Buttons (top-right) -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                    <Button Content="Create Backup" Width="150" Height="32" Command="{Binding BackupWtfCommand}"/>
                    <Button Content="📂" Width="30" Height="30" Margin="6,0,0,0" Command="{Binding OpenBackupsFolder}"/>
                </StackPanel>

                <!-- Progress / Info -->
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,0,0"
                         Width="200"
                         Height="{Binding ActualHeight, ElementName=CommentsBox}"
                         VerticalAlignment="Top"
                         Background="DarkGray"
                         Foreground="White"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Text="{Binding BackupProgress}"/>
            </Grid>
        </Border>

        <!-- Backup Manager -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ListView of backups -->
                <ListView x:Name="BackupsListView"
                          Grid.Column="1"
                          ItemsSource="{Binding Backups}"
                          SelectedItem="{Binding SelectedBackup, Mode=TwoWay}"
                          SizeChanged="BackupsListView_SizeChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn x:Name="DateColumn" Header="Date" Width="45">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Date, StringFormat={}{0:MM/dd}}">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding Date, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}"/>
                                            </TextBlock.ToolTip>
                                            <ToolTipService.InitialShowDelay>0</ToolTipService.InitialShowDelay>
                                            <ToolTipService.BetweenShowDelay>0</ToolTipService.BetweenShowDelay>
                                            <ToolTipService.ShowDuration>3000</ToolTipService.ShowDuration>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn x:Name="TitleColumn" Header="Title">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="5,0"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding Comments}"/>
                                            </TextBlock.ToolTip>
                                            <ToolTipService.InitialShowDelay>0</ToolTipService.InitialShowDelay>
                                            <ToolTipService.BetweenShowDelay>0</ToolTipService.BetweenShowDelay>
                                            <ToolTipService.ShowDuration>3000</ToolTipService.ShowDuration>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Fav" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsFavorite, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Open" Width="40">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="📂" Command="{Binding DataContext.OpenBackupFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding FolderPath}" Width="30" Height="25"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Left Panel: Backup Details -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Title label -->
                        <RowDefinition Height="Auto"/>
                        <!-- Title textbox -->
                        <RowDefinition Height="Auto"/>
                        <!-- Comments label -->
                        <RowDefinition Height="*"/>
                        <!-- Comments textbox -->
                        <RowDefinition Height="Auto"/>
                        <!-- Date label -->
                        <RowDefinition Height="Auto"/>
                        <!-- Date controls -->
                        <RowDefinition Height="Auto"/>
                        <!-- Buttons -->
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" Text="Title:" Foreground="White"/>
                    <TextBox Grid.Row="1" Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <!-- Comments -->
                    <TextBlock Grid.Row="2" Text="Comments:" Foreground="White"/>
                    <TextBox Grid.Row="3" Text="{Binding EditComments, UpdateSourceTrigger=PropertyChanged}" 
                             TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

                    <!-- Date -->
                    <TextBlock Grid.Row="4" Text="Date:" Foreground="White" Margin="0,0,0,5"/>
                    <Grid Grid.Row="5" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <!-- Date TextBox -->
                            <ColumnDefinition Width="150"/>
                            <!-- Now Button -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Backup size -->
                            <ColumnDefinition Width="*"/>
                            <!-- Backup Progress -->
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <!-- TextBox for date -->
                        <Grid>
                            <TextBox x:Name="DateTextBox"
                                     Text="{Binding EditDate, StringFormat=dd/MM/yyyy HH:mm, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalContentAlignment="Center"
                                     Foreground="White"
                                     Background="Black"
                                     Margin="0"/>
                            <TextBlock Text="dd/MM/yyyy HH:mm"
                                       Foreground="Gray"
                                       Margin="5,0,0,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text, ElementName=DateTextBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                        </Grid>

                        <!-- Button 'Now' -->
                        <Button Grid.Column="1" Content="Now" Width="40" Height="25" Margin="5,0,0,0"
                                Command="{Binding SetBackupDateToNowCommand}"/>

                        <!-- Backup size info -->
                        <TextBlock Grid.Column="2" Foreground="White" VerticalAlignment="Center" 
                                   Text="{Binding SelectedBackup.SizeMB, StringFormat=WTF Size: {0:F2} MB}"/>
                        <!-- Backup Progress -->
                        <TextBlock Grid.Column="3" Foreground="White" VerticalAlignment="Center" 
                                   Text="{Binding RestoreProgress}"/>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <Button Content="Update Backup" Width="120" Margin="0,0,5,0" 
                                Command="{Binding UpdateBackupCommand}"/>
                        <Button Content="Delete Backup" Width="120" Margin="0,0,5,0" 
                                Command="{Binding DeleteBackupCommand}"/>
                        <Button Content="Restore Backup" Width="120"
                                Command="{Binding RestoreBackupCommand}"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
