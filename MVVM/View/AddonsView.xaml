<UserControl x:Class="WotlkCPKTools.MVVM.View.AddonsView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:WotlkCPKTools.Core"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:IsInstalledConverter x:Key="IsInstalledConverter"/>

        <!-- Estilos por columna -->
        <Style x:Key="LeftCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <Style x:Key="RightCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Darker Overlay -->
        <Rectangle Fill="Black" Opacity="0.6"/>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Stretch">

                <!-- Installed AddOns -->
                <Expander IsExpanded="True"
                          Style="{StaticResource ListExpanderStyle}">
                    <Expander.Header>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="INSTALLED"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       DockPanel.Dock="Left"/>
                            <!-- Podés agregar botones más adelante -->
                            <Button DockPanel.Dock="Right"
                                    Content="Refresh"
                                    Command="{Binding DataContext.RefreshCommand, ElementName=Root}"
                                    Height="auto" Width="100"
                                    Background="#4CAF50" Foreground="White"/>
                            <Button DockPanel.Dock="Right"
                                    Content="Update All"
                                    Command="{Binding DataContext.UpdateAllCommand, ElementName=Root}"
                                    Height="auto" Width="auto"
                                    Background="Green" Foreground="White" HorizontalAlignment="left"/>
                            
                        </DockPanel>
                    </Expander.Header>
                    <DataGrid x:Name="InstalledAddonsGrid"
                              ItemsSource="{Binding InstalledAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                              CellEditEnding="DataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" MinWidth="160"/>
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" FontWeight="Normal"/>
                            <DataGridTemplateColumn Header="Last Update" Width="110" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding>
                                                    <MultiBinding.Converter>
                                                        <conv:DownloadStatusToTextConverter />
                                                    </MultiBinding.Converter>
                                                    <Binding Path="LastUpdate" />
                                                    <Binding Path="DownloadStatus" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Status" Width="24">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle Width="20" Height="20" RadiusX="2" RadiusY="2" HorizontalAlignment="Right">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Setter Property="Fill" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="False">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Actions" Width="95" MinWidth="95">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                                            <Button Command="{Binding DataContext.UpdateCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Width="30"
                                                    Margin="0">
                                                <Button.Content>
                                                    <ContentControl>
                                                        <ContentControl.Style>
                                                            <Style TargetType="ContentControl">
                                                                <Setter Property="Height" Value="25"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUpdated}" Value="False">
                                                                        <Setter Property="Content" Value="{StaticResource IconCloudInsideFilled}"/>
                                                                        <Setter Property="Foreground" Value="Yellow"/>
                                                                    </DataTrigger>
                                                                    <!-- Si está actualizado, mostrar otro icono -->
                                                                    <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                                                                        <Setter Property="Content" Value="{StaticResource IconCloudCheckFilled}"/>
                                                                        <Setter Property="Foreground" Value="#4000FF00"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ContentControl.Style>
                                                    </ContentControl>
                                                </Button.Content>
                                            </Button>
                                            
                                            <Button Command="{Binding DataContext.MoveToFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="0"
                                                    BorderThickness="0">
                                                <Viewbox Width="20" Height="20" Stretch="Uniform">
                                                    <ContentControl Content="{StaticResource IconArrowDown}" Foreground="Red"/>
                                                </Viewbox>
                                            </Button>

                                            <Button Command="{Binding DataContext.RemoveInstalledCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="0"
                                                    BorderThickness="0">
                                                <Viewbox Width="20" Height="20" Stretch="Uniform">
                                                    <ContentControl Content="{StaticResource IconTrash}" Foreground="Red"/>
                                                </Viewbox>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>

                <!-- Quick Add -->
                <Expander Style="{StaticResource ListExpanderStyle}" 
                          IsExpanded="True"
                          Visibility="{Binding ElementName=FastAddAddonsGrid, Path=HasItems, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Expander.Header>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="QUICK ADD"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       DockPanel.Dock="Left"/>
                            <!-- Can add buttons latter -->
                        </DockPanel>
                    </Expander.Header>
                    <DataGrid x:Name="FastAddAddonsGrid"
                              ItemsSource="{Binding FastAddAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                              CellEditEnding="DataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" MinWidth="160"/>
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" />
                            <DataGridTemplateColumn Header="Actions" Width="80" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Command="{Binding DataContext.AddFromFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    Width="30"
                                                    BorderThickness="0">
                                                <Viewbox Width="20" Height="20" Stretch="Uniform">
                                                    <ContentControl Content="{StaticResource IconPlus}" Foreground="#4CAF50"/>
                                                </Viewbox>
                                            </Button>
                                            <Button Command="{Binding DataContext.DeleteFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    Width="30"
                                                    BorderThickness="0">
                                                <Viewbox Width="20" Height="20" Stretch="Uniform">
                                                    <ContentControl Content="{StaticResource IconTrash}" Foreground="Red"/>
                                                </Viewbox>
                                            </Button>
                                            
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>

                <!-- Custom Lists -->
                <ItemsControl ItemsSource="{Binding CustomAddonLists}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Style="{StaticResource ListExpanderStyle}" FontSize="14" FontWeight="Normal" Foreground="White" Background="Transparent">
                                <Expander.Header>
                                    <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="0,0,0,0">

                                        <!-- Nombre de la lista -->
                                        <TextBlock Text="{Binding ListName}" FontSize="17" FontWeight="Bold" 
                                                   Foreground="White" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        
                                        <Rectangle Height="1" Fill="Gray" VerticalAlignment="Center" Margin="4,0,4,0" HorizontalAlignment="Stretch" DockPanel.Dock="Left"/>
                                        
                                        <!-- Botones a la derecha -->
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                            <Button Width="27" Height="25"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.DownloadCustomList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    BorderThickness="0">
                                                <Button.Content>
                                                    <ContentControl>
                                                        <ContentControl.Style>
                                                            <Style TargetType="ContentControl">
                                                                <!-- Icono por defecto -->
                                                                <Setter Property="Content" Value="{StaticResource IconCloudInsideFilled}"/>
                                                                <Setter Property="Foreground" Value="Yellow"/>
                                                                <Setter Property="Height" Value="25"/>
                                                                <Style.Triggers>
                                                                    <!-- Si está actualizado, mostrar otro icono -->
                                                                    <DataTrigger Binding="{Binding IsUpToDate}" Value="True">
                                                                        <Setter Property="Content" Value="{StaticResource IconCloudCheckFilled}"/>
                                                                        <Setter Property="Foreground" Value="#4000FF00"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ContentControl.Style>
                                                    </ContentControl>
                                                </Button.Content>

                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <!-- Ocultar si RepoFileUrl es null o vacío -->
                                                            <DataTrigger Binding="{Binding RepoFileUrl}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RepoFileUrl}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>



                                            <Button Width="30" Height="20"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.DeleteList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    BorderThickness="0">
                                                <Viewbox Width="20" Height="20" Stretch="Uniform">
                                                    <ContentControl Content="{StaticResource IconTrash}" Foreground="#80FF0000"/>
                                                </Viewbox>
                                            </Button>
                                        </StackPanel>

                                    </DockPanel>
                                </Expander.Header>

                                <!-- Contenido del Expander -->
                                <DataGrid ItemsSource="{Binding Addons}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" MinWidth="160"/>
                                        <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" />
                                        <DataGridTemplateColumn Header="Actions" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                        <Button Command="{Binding DataContext.MoveFromCustomListFileCommand, ElementName=Root}" 
                                                                CommandParameter="{Binding}" 
                                                                Background="Transparent" Foreground="White"
                                                                Width="30" Height="25"
                                                                BorderThickness="0"
                                                                HorizontalContentAlignment="Center">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    
                                                                    <Setter Property="Content">
                                                                        <Setter.Value>
                                                                            <Viewbox Width="20" Height="20">
                                                                                <ContentControl Content="{StaticResource IconPlus}" Foreground="#4CAF50"/>
                                                                            </Viewbox>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        
                                                                        <DataTrigger Value="True">
                                                                            <DataTrigger.Binding>
                                                                                <MultiBinding Converter="{StaticResource IsInstalledConverter}">
                                                                                    <Binding />
                                                                                    <Binding Path="DataContext.InstalledAddons" ElementName="Root"/>
                                                                                </MultiBinding>
                                                                            </DataTrigger.Binding>
                                                                            <Setter Property="Content" Value="✔️"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>

                                </DataGrid>

                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                
                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Command="{Binding DataContext.RefreshAllListsCommand, ElementName=Root}"
                    Height="auto" Width="auto"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ContentControl Content="{StaticResource IconDobleArrowCircle}" Width="20" Height="20" Margin="0,0,4,0"/>
                    <TextBlock Text="Check for Updates" VerticalAlignment="Center" FontSize="15" />
                </StackPanel>
            </Button>

            <Button Grid.Column="1"
                    Command="{Binding DataContext.OpenAddAddonWindowCommand, ElementName=Root}"
                    Height="auto" Width="auto"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ContentControl Content="{StaticResource IconPlus}" Width="20" Height="20" Margin="0,0,4,0"/>
                    <TextBlock Text="Add New Addon" VerticalAlignment="Center" FontSize="15" />
                </StackPanel>
            </Button>


            <Button Grid.Column="3"
                    Command="{Binding DataContext.DownloadRecommendedList, ElementName=Root}"
                    Height="auto" Width="auto"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ContentControl Content="{StaticResource IconArrowDownSquare}" Width="25" Height="25" Margin="5"/>
                    
                </StackPanel>
            </Button>
            
            <Button Grid.Column="4"
                    Command="{Binding DataContext.OpenAddCustomListWindowCommand, ElementName=Root}"
                    Height="auto" Width="auto"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,3,0">
                    <ContentControl Content="{StaticResource IconList}" Width="25" Height="25" Margin="7,4,7,4"/>
                    <TextBlock Text="Add Custom List" VerticalAlignment="Center" FontSize="15" />
                </StackPanel>
            </Button>

            <Button Grid.Column="5"
                    Command="{Binding DataContext.OpenCustomListFolderCommand, ElementName=Root}"
                    Height="auto" Width="auto"
                    Background="Transparent" Foreground="White"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,3,0">
                    <ContentControl Content="{StaticResource IconFolder}" Width="25" Height="25" Margin="7,4,7,4"/>
                    <TextBlock Text="CustomList" VerticalAlignment="Center" FontSize="15" />
                </StackPanel>
            </Button>

        </Grid>
        
        <!-- Loading overlay -->
        
        <Grid Grid.RowSpan="2"
              Panel.ZIndex="1"
              IsHitTestVisible="{Binding IsLoading}"
             
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            
            <Border Background="#80000000"/>
            
            <ProgressBar Width="150" Height="20" IsIndeterminate="True"
                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        
    </Grid>
</UserControl>
