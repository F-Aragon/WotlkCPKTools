<UserControl x:Class="WotlkCPKTools.MVVM.View.AddonsView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:WotlkCPKTools.Core"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:IsInstalledConverter x:Key="IsInstalledConverter"/>

        <!-- Estilos por columna -->
        <Style x:Key="LeftCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <Style x:Key="RightCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Darker Overlay -->
        <Rectangle Fill="Black" Opacity="0.6"/>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Stretch">

                <!-- Installed AddOns -->
                <Expander IsExpanded="True"
                          Style="{StaticResource ListExpanderStyle}">
                    <Expander.Header>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="Installed Addons"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       DockPanel.Dock="Left"/>
                            <!-- Podés agregar botones más adelante -->
                        </DockPanel>
                    </Expander.Header>
                    <DataGrid x:Name="InstalledAddonsGrid"
                              ItemsSource="{Binding InstalledAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                              CellEditEnding="DataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" />
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" />
                            <DataGridTemplateColumn Header="Last Update" Width="Auto" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding>
                                                    <MultiBinding.Converter>
                                                        <conv:DownloadStatusToTextConverter />
                                                    </MultiBinding.Converter>
                                                    <Binding Path="LastUpdate" />
                                                    <Binding Path="DownloadStatus" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Status" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle Width="20" Height="20" RadiusX="2" RadiusY="2">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Setter Property="Fill" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="False">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="🔄"
                                                    Command="{Binding DataContext.UpdateCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White"
                                                    Width="30"/>
                                            <Button Content="⬇️"
                                                    Command="{Binding DataContext.MoveToFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White"
                                                    Width="30"/>
                                            <Button Content="🗑️"
                                                    Command="{Binding DataContext.RemoveInstalledCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Red" Foreground="White"
                                                    Width="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>

                <!-- Fast Add -->
                <Expander Style="{StaticResource ListExpanderStyle}" 
                          IsExpanded="True"
                          Visibility="{Binding ElementName=FastAddAddonsGrid, Path=HasItems, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Expander.Header>
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="Fast Add Addons"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       DockPanel.Dock="Left"/>
                            <!-- Can add buttons latter -->
                        </DockPanel>
                    </Expander.Header>
                    <DataGrid x:Name="FastAddAddonsGrid"
                              ItemsSource="{Binding FastAddAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                              CellEditEnding="DataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" />
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" />
                            <DataGridTemplateColumn Header="Actions" Width="80" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="+" 
                                                    Command="{Binding DataContext.AddFromFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#4CAF50" Foreground="White"
                                                    Width="30"/>
                                            <Button Content="🗑️"
                                                    Command="{Binding DataContext.DeleteFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Red" Foreground="White"
                                                    Width="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>

                <!-- Custom Lists -->
                <ItemsControl ItemsSource="{Binding CustomAddonLists}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander FontSize="14" FontWeight="Bold" Foreground="White" Background="Transparent">
                                <Expander.Header>
                                    <DockPanel LastChildFill="False">
                                        <TextBlock Text="{Binding ListName}" 
                                                   FontSize="14" FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"
                                                   DockPanel.Dock="Left" />
                                        <Button Width="30" Height="25"
                                                Command="{Binding DataContext.DownloadCustomList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" 
                                                DockPanel.Dock="Right"
                                                Foreground="White">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Setter Property="Content" Value="⟳"/>
                                                    <Setter Property="Background" Value="Red"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RepoFileUrl}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RepoFileUrl}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUpToDate}" Value="True">
                                                            <Setter Property="Content" Value="✔️"/>
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Width="30" Height="25"
                                                Foreground="Red"
                                                Background="Transparent"
                                                Content="🗑️"
                                                Command="{Binding DataContext.DeleteList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </DockPanel>
                                </Expander.Header>
                                <DataGrid ItemsSource="{Binding Addons}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" />
                                        <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" />
                                        <DataGridTemplateColumn Header="Actions" Width="80" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button Command="{Binding DataContext.MoveFromCustomListFileCommand, ElementName=Root}" 
                                                                CommandParameter="{Binding}" 
                                                                Background="#4CAF50" Foreground="White"
                                                                Width="30">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Content" Value="+"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Value="True">
                                                                            <DataTrigger.Binding>
                                                                                <MultiBinding Converter="{StaticResource IsInstalledConverter}">
                                                                                    <Binding />
                                                                                    <Binding Path="DataContext.InstalledAddons" ElementName="Root"/>
                                                                                </MultiBinding>
                                                                            </DataTrigger.Binding>
                                                                            <Setter Property="Content" Value="✔️"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Add New"
                    Command="{Binding DataContext.OpenAddAddonWindowCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="#007ACC" Foreground="White"/>
            <Button Content="Refresh"
                    Command="{Binding DataContext.RefreshCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Refresh&#x0a;All Lists"
                    Command="{Binding DataContext.RefreshAllListsCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="Red" Foreground="White"/>
            <Button Content="Update All"
                    Command="{Binding DataContext.UpdateAllCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="Green" Foreground="White"/>
            <Button Content="Download&#x0a;RecommendedList"
                    Command="{Binding DataContext.DownloadRecommendedList, ElementName=Root}"
                    Height="40" Width="80"
                    Background="DarkBlue" Foreground="White"/>
            <Button Content="Add&#x0a;CustomList"
                    Command="{Binding DataContext.OpenAddCustomListWindowCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="DarkBlue" Foreground="White"/>
            <Button Content="C.List📂"
                    Command="{Binding DataContext.OpenCustomListFolderCommand, ElementName=Root}"
                    Height="40" Width="50"
                    Background="#f5cb42" Foreground="Black"/>
        </StackPanel>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="2"
              Panel.ZIndex="1"
              IsHitTestVisible="{Binding IsLoading}"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#80000000"/>
            <ProgressBar Width="150" Height="20" IsIndeterminate="True"
                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
