<UserControl x:Class="WotlkCPKTools.MVVM.View.AddonsView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:WotlkCPKTools.Services"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#1b1b1b">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <Expander Header="Installed Addons" 
                          Foreground="White" 
                          Background="Transparent"
                          FontSize="14" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"
                          IsExpanded="True">
                    <!-- Por defecto abierto -->
                    <DataGrid ItemsSource="{Binding InstalledAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Background="#2b2b2b"
                              Foreground="Gray"
                              RowHeight="30"
                              IsReadOnly="True"
                              ColumnWidth="SizeToCells"
                              Margin="0,0,0,20"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="SizeToCells"/>
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubLink}" Width="*"/>
                            <DataGridTextColumn Header="Last Update" Binding="{Binding LastUpdate, StringFormat=yyyy-MM-dd HH:mm}" Width="SizeToCells"/>

                            <DataGridTemplateColumn Header="Status" Width="SizeToCells">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle Width="20" Height="20" RadiusX="3" RadiusY="3">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Setter Property="Fill" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="False">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- Update Button -->
                                            <Button Content="🔄"
                                                    Command="{Binding DataContext.UpdateCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White"
                                                    Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                            <!-- Move to Fast Add Button -->
                                            <Button Content="⬇️"
                                                    Command="{Binding DataContext.MoveToFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White"
                                                    Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                            <!-- Delete Button -->
                                            <Button Content="🗑️"
                                                    Command="{Binding DataContext.RemoveInstalledCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Red" Foreground="White"
                                                    Padding="5,0" Width="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>


                <!-- Fast Add -->
                <Expander Header="Fast Add Addons" 
                          Foreground="White" 
                          Background="Transparent"
                          FontSize="14" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"
                          IsExpanded="True">
                    <!-- Por defecto abierto -->
                    <DataGrid ItemsSource="{Binding FastAddAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Background="#2b2b2b"
                              Foreground="Gray"
                              RowHeight="30"
                              Margin="0,0,0,20"
                              IsReadOnly="True"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="SizeToCells"/>
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubLink}" Width="*"/>

                            <DataGridTemplateColumn Header="Actions" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="⬆️"
                                                    Command="{Binding DataContext.AddFromFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#4CAF50" Foreground="White"
                                                    Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                            <Button Content="🗑️"
                                                    Command="{Binding DataContext.DeleteFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Red" Foreground="White"
                                                    Padding="5,0" Width="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>
                
                <!-- Extra Lists -->
                <ItemsControl ItemsSource="{Binding CustomAddonLists}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding ListName}" 
                                      Foreground="White" Background="Transparent"
                                      FontSize="14" FontWeight="Bold" Margin="0,0,0,5">
                                <DataGrid ItemsSource="{Binding Addons}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          HeadersVisibility="Column"
                                          Background="#2b2b2b"
                                          Foreground="Gray"
                                          RowHeight="30"
                                          Margin="0,0,0,20"
                                          IsReadOnly="True"
                                          PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="SizeToCells"/>
                                        <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Button Content="⬆️"
                                                Command="{Binding DataContext.AddFromCustomListCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" 
                                                Background="#4CAF50" Foreground="White"
                                                Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                                        <Button Content="🗑️"
                                                Command="{Binding DataContext.DeleteFromCustomListCommand, ElementName=Root}"
                                                CommandParameter="{Binding}" 
                                                Background="Red" Foreground="White"
                                                Padding="5,0" Width="30"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Add New"
                    Command="{Binding DataContext.OpenAddAddonWindowCommand, ElementName=Root}"
                    Height="40" Width="100"
                    Background="#007ACC" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Refresh"
                    Command="{Binding DataContext.RefreshCommand, ElementName=Root}"
                    Height="40" Width="100"
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Update All"
                    Command="{Binding DataContext.UpdateAllCommand, ElementName=Root}"
                    Height="40" Width="120" Margin="10,0,0,0"
                    Background="Green" Foreground="White"/>
        </StackPanel>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="2"
              Panel.ZIndex="1"
              IsHitTestVisible="{Binding IsLoading}"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#80000000"/>
            <ProgressBar Width="150" Height="20" IsIndeterminate="True"
                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
