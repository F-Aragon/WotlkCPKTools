<UserControl x:Class="WotlkCPKTools.MVVM.View.AddonsView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:WotlkCPKTools.Core"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#1b1b1b">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:IsInstalledConverter x:Key="IsInstalledConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Stretch">
                <!-- Installed AddOns -->
                <Expander Header="Installed Addons" 
                          Foreground="White" 
                          Background="Transparent"
                          FontSize="14" 
                          FontWeight="Bold" 
                          Margin="0,0,0,0"
                          IsExpanded="True">
                    <!-- Default: open -->
                    <DataGrid x:Name="InstalledAddonsGrid"
                              ItemsSource="{Binding InstalledAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Background="#2b2b2b"
                              Foreground="Gray"
                              RowHeight="30"
                              IsReadOnly="False"
                              ColumnWidth="SizeToCells"
                              Margin="0,0,0,5"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                              CellEditEnding="DataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="SizeToCells" IsReadOnly="False"/>
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Last Update" Binding="{Binding LastUpdate, StringFormat=yyyy-MM-dd HH:mm}" Width="SizeToCells" IsReadOnly="True"/>

                            <DataGridTemplateColumn Header="Status" Width="SizeToCells">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle Width="20" Height="20" RadiusX="3" RadiusY="3">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Setter Property="Fill" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUpdated}" Value="False">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Actions" Width="120" MinWidth="120" MaxWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- Update Button -->
                                            <Button Content="🔄"
                                                    Command="{Binding DataContext.UpdateCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White"
                                                    Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                            <!-- Move to Fast Add Button -->
                                            <Button Content="⬇️"
                                                    Command="{Binding DataContext.MoveToFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#007ACC" Foreground="White"
                                                    Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                            <!-- Delete Button -->
                                            <Button Content="🗑️"
                                                    Command="{Binding DataContext.RemoveInstalledCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Red" Foreground="White"
                                                    Padding="5,0" Width="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>


                <!-- Fast Add -->
                <Expander Header="Fast Add Addons" 
                          Foreground="White" 
                          Background="Transparent"
                          FontSize="14" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"
                          IsExpanded="True">
                    <!-- Default: open -->
                    <DataGrid x:Name="FastAddAddonsGrid"
                              ItemsSource="{Binding FastAddAddons}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Background="#2b2b2b"
                              Foreground="Gray"
                              RowHeight="30"
                              Margin="0,0,0,5"
                              IsReadOnly="False"
                              PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                              CellEditEnding="DataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="SizeToCells" IsReadOnly="False"/>
                            <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" IsReadOnly="True"/>

                            <DataGridTemplateColumn Header="Actions" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="+"
                                                    Command="{Binding DataContext.AddFromFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="#4CAF50" Foreground="White"
                                                    Padding="5,0" Width="30" Margin="0,0,5,0"/>
                                            <Button Content="🗑️"
                                                    Command="{Binding DataContext.DeleteFastAddCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}"
                                                    Background="Red" Foreground="White"
                                                    Padding="5,0" Width="30"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>
                
                <!-- Custom Lists -->
                <ItemsControl ItemsSource="{Binding CustomAddonLists}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="White" Background="Transparent">
                                <Expander.Header>
                                    <DockPanel LastChildFill="False">
                                        <!-- Nombre de la lista -->
                                        <TextBlock Text="{Binding ListName}" 
                                                   FontSize="14" FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"
                                                   DockPanel.Dock="Left" />
                                        <!-- For texting  <TextBlock Text="{Binding RepoFileUrl}" Foreground="Yellow" Margin="10,0,0,0"/> -->
                                        <!-- For texting<TextBlock Text="{Binding IsUpToDate}" Foreground="Yellow" Margin="10,0,0,0"/> -->

                                        <!-- Download list button -->
                                        <Button Width="30" Height="25"
                                                Command="{Binding DataContext.DownloadCustomList, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" 
                                                DockPanel.Dock="Right"
                                                Foreground="White">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <!-- Default: Visible and icon ⟳ -->
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Setter Property="Content" Value="⟳"/>
                                                    <Setter Property="Background" Value="Red"/>
                                                    <Style.Triggers>
                                                        <!-- Hide button if no RepoFileUrl -->
                                                        <DataTrigger Binding="{Binding RepoFileUrl}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RepoFileUrl}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>

                                                        <!-- Change icon if IsUpToDate -->
                                                        <DataTrigger Binding="{Binding IsUpToDate}" Value="True">
                                                            <Setter Property="Content" Value="✔️"/>
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                        
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </DockPanel>
                                </Expander.Header>
                                <DataGrid ItemsSource="{Binding Addons}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          HeadersVisibility="Column"
                                          Background="#2b2b2b"
                                          Foreground="Gray"
                                          RowHeight="30"
                                          Margin="0,0,0,5"
                                          IsReadOnly="True"
                                          PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="SizeToCells" />
                                        <DataGridTextColumn Header="GitHub Link" Binding="{Binding GitHubUrl}" Width="*" />
                                        <DataGridTemplateColumn Header="Actions" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Button Command="{Binding DataContext.MoveFromCustomListFileCommand, ElementName=Root}"
                                                                CommandParameter="{Binding}" 
                                                                Background="#4CAF50" Foreground="White"
                                                                Padding="5,0" Width="30" 
                                                                Margin="0,0,5,0">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Content" Value="+"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Value="True">
                                                                            <DataTrigger.Binding>
                                                                                <MultiBinding Converter="{StaticResource IsInstalledConverter}">
                                                                                    <!-- Row Addon -->
                                                                                    <Binding />
                                                                                    <!-- Installed addon collection, from the ViewModel -->
                                                                                    <Binding Path="DataContext.InstalledAddons" ElementName="Root"/>
                                                                                </MultiBinding>
                                                                            </DataTrigger.Binding>
                                                                            <Setter Property="Content" Value="✔️"/>
                                                                            <!-- Change button icon if it is in installed -->
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
            <Button Content="Add New"
                    Command="{Binding DataContext.OpenAddAddonWindowCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="#007ACC" Foreground="White" Margin="0,0,5,0"/>
            <Button Content="Refresh"
                    Command="{Binding DataContext.RefreshCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="#4CAF50" Foreground="White" Margin="0,0,5,0"/>
            <Button Content="Refresh&#x0a;All Lists"
                    Command="{Binding DataContext.RefreshAllListsCommand, ElementName=Root}"
                    Height="40" Width="80"
                    Background="Red" Foreground="White" Margin="0,0,5,0"/>
            <Button Content="Update All"
                    Command="{Binding DataContext.UpdateAllCommand, ElementName=Root}"
                    Height="40" Width="80" Margin="0,0,5,0"
                    Background="Green" Foreground="White"/>
            <Button Content="Download&#x0a;RecommendedList"
                    Command="{Binding DataContext.DownloadRecommendedList, ElementName=Root}"
                    Height="40" Width="80" Margin="0,0,5,0"
                    Background="DarkBlue" Foreground="White"/>
            <Button Content="Add&#x0a;CustomList"
                    Command="{Binding DataContext.OpenAddCustomListWindowCommand, ElementName=Root}"
                    Height="40" Width="80" Margin="0,0,5,0"
                    Background="DarkBlue" Foreground="White"/>
            <Button Content="C.List📂"
                    Command="{Binding DataContext.OpenCustomListFolderCommand, ElementName=Root}"
                    Height="40" Width="50" Margin="0,0,5,0"
                    Background="#f5cb42" Foreground="Black"/>
            

        </StackPanel>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="2"
              Panel.ZIndex="1"
              IsHitTestVisible="{Binding IsLoading}"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#80000000"/>
            <ProgressBar Width="150" Height="20" IsIndeterminate="True"
                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
