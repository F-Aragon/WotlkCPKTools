<Window x:Class="WotlkCPKTools.MVVM.View.AddAddonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WotlkCPKTools.MVVM.ViewModel"
        Title="Add Addon"
        Height="250" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <vm:AddAddonWindowModel />
    </Window.DataContext>

    <!-- Border para bordes redondeados -->
    <Border CornerRadius="10" Background="#EA000000" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <!-- Botón Cerrar -->
            <Button Content="✕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>

            <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Título -->
                <TextBlock Text="Add a New Addon"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Descripción -->
                <TextBlock Foreground="White"
                           Margin="10"
                           TextWrapping="Wrap"
                           TextAlignment="Center">
                    Enter a valid GitHub repository URL. Examples:
                    <LineBreak/>
                    - https://github.com/username/repo
                    <LineBreak/>
                    - https://github.com/username/repo.git
                </TextBlock>

                <!-- TextBox para URL con estilo ModernTextBox -->
                <TextBox Width="400"
                         HorizontalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Text="{Binding GitHubUrl, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,5"/>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding StatusColor}"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Botón Add -->
                <Button Content="Add Addon"
                        Command="{Binding AddAddonCommand}"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Center"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
