<Window x:Class="WotlkCPKTools.MVVM.View.AddCustomListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom List"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!-- Border for rounded corners and transparency -->
    <Border CornerRadius="10" Background="#EA000000" BorderBrush="Black" BorderThickness="1">
        <Grid Margin="10">
            <!-- Close Window -->
            <Button Content="✕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="5"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>

            <StackPanel>
                <TextBlock Text="Add a Custom List" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0 0 0 10"/>

                <!-- Tabs: From URL / From File / Paste -->
                <TabControl Background="#EA000000" Foreground="White" BorderBrush="#40E1E1E1">
                    <TabItem Header="From URL">
                        <StackPanel Margin="10">
                            <TextBlock Text="Enter a valid GitHub repository URL to a .txt file. Example:"
                                       Foreground="White"
                                       FontSize="15"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="- https://github.com/anotherUser/awesomeAddons/blob/main/addonsList.txt"
                                       Foreground="LightGray"
                                       FontSize="12"
                                       Margin="10,0,0,5"/>

                            <!-- TextBox inside Border for custom styling -->
                            <Border Background="#2b2b2b" 
                                    CornerRadius="5" 
                                    BorderBrush="Gray" 
                                    BorderThickness="1" 
                                    Height="40"
                                    Margin="10">
                                <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="10,0"
                                         VerticalContentAlignment="Center"
                                         Foreground="#cfcfcf"
                                         HorizontalAlignment="Stretch"/>
                            </Border>

                            <Button Content="Add" Command="{Binding AddFromUrlCommand}" Margin="50 0 50 0"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="From File">
                        <StackPanel Margin="10">
                            <Button Content="Select File" Command="{Binding SelectFileCommand}"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Paste Content">
                        <StackPanel Margin="10" VerticalAlignment="Top">
                            <TextBlock Text="List Name:" Margin="0 0 0 5" Foreground="White"/>
                            <TextBox Width="auto" Text="{Binding ListName_pastedTab, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="5 0 5 5" Background="#20E1E1E1" BorderBrush="#40E1E1E1"/>

                            <TextBlock Text="GitHub URL (optional):" Margin="0 0 0 5" Foreground="White"/>
                            <TextBox Width="auto" Text="{Binding Url_pastedTab, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="5 0 5 5" Background="#20E1E1E1" BorderBrush="#40E1E1E1"/>

                            <TextBlock Text="Paste Addons List:" Margin="0 0 0 5" Foreground="White"/>
                            <TextBox Width="auto" Height="150" 
                                     Text="{Binding PastedContent_pastedTab}" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="5 0 5 5" Background="#20E1E1E1" BorderBrush="#40E1E1E1"/>

                            <Button Content="Add" 
                                    Command="{Binding AddFromPasteCommand}" 
                                    Width="150"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Grid>
    </Border>
</Window>
