<UserControl x:Class="WotlkCPKTools.MVVM.View.MoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WotlkCPKTools.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:MoreViewModel/>
    </UserControl.DataContext>

    <Grid>
        <!-- Semi-transparent background rectangle -->
        <Rectangle Fill="Black" Opacity="0.6"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- First Row: Realmlist File -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,10,5,0">
                <TextBlock Text="REALMLIST File: " 
                           Width="150" 
                           VerticalAlignment="Center" 
                           Foreground="LightGray"
                           FontWeight="Bold"
                           FontSize="15"/>

                <Border Background="#2C2A3E" CornerRadius="5" Padding="5" Margin="5,0,0,0">
                    <TextBlock Text="{Binding RealmlistFolderPath}" 
                               VerticalAlignment="Center" 
                               Foreground="White" 
                               Width="500" 
                               TextTrimming="CharacterEllipsis"
                               />
                </Border>

                <Button Content="Browse"
                        ToolTip="Change Realmlist folder"
                        Width="80" 
                        Margin="5,0,0,0"
                        Foreground="White"
                        Background="#444062"
                        BorderBrush="#5A5776"
                        BorderThickness="1"
                        Cursor="Hand"
                        Command="{Binding BrowseRealmlistFileCommand}"/>
            </StackPanel>

            <!-- Second Row: Launcher.exe -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,5">
                <TextBlock Text="Launcher .exe: " 
                           ToolTip="Change wow.exe location (or any *.exe)"
                           Width="150" 
                           VerticalAlignment="Center" 
                           Foreground="LightGray"
                           FontWeight="Bold"
                           FontSize="15"/>

                <Border Background="#2C2A3E" CornerRadius="5" Padding="5" Margin="5,0,0,0">
                    <TextBlock Text="{Binding LauncherExePath}" 
                               VerticalAlignment="Center" 
                               Foreground="White" 
                               Width="500" 
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <Button Content="Browse" 
                        Width="80" 
                        Margin="5,0,0,0"
                        Foreground="White"
                        Background="#444062"
                        BorderBrush="#5A5776"
                        BorderThickness="1"
                        Cursor="Hand"
                        Command="{Binding BrowseLauncherExeCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
