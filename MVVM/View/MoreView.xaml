<UserControl x:Class="WotlkCPKTools.MVVM.View.MoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WotlkCPKTools.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Set DataContext directly to MoreViewModel -->
    <UserControl.DataContext>
        <vm:MoreViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- First Row: Realmlist File -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
            <TextBlock Text="REALMLIST File: " 
                       Width="150" 
                       VerticalAlignment="Center" 
                       Foreground="White"/>
            <TextBlock Text="{Binding RealmlistFolderPath}" 
                       VerticalAlignment="Center" 
                       Foreground="LightGray" 
                       Width="500" 
                       TextTrimming="CharacterEllipsis"/>
            <Button Content="Browse" 
                    Width="80" 
                    Margin="5,0,0,0"
                    Command="{Binding BrowseRealmlistFileCommand}"/>
        </StackPanel>

        <!-- Second Row: Launcher.exe -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
            <TextBlock Text="Launcher .exe: " 
                       Width="150" 
                       VerticalAlignment="Center" 
                       Foreground="White"/>
            <TextBlock Text="{Binding LauncherExePath}" 
                       VerticalAlignment="Center" 
                       Foreground="LightGray" 
                       Width="500" 
                       TextTrimming="CharacterEllipsis"/>
            <Button Content="Browse" 
                    Width="80" 
                    Margin="5,0,0,0"
                    Command="{Binding BrowseLauncherExeCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
